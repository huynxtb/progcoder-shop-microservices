{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Serilog": {
      "Enable": true,
      "ServiceName": "basket.service",
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Information"
        }
      },
      "Console": {
        "Enable": true,
        "Level": "Debug"
      },
      "Otlp": {
        "Endpoint": "http://otel-collector:4317"
      }
    }
  },
  "ConnectionStrings": {
    "DbType": "MONGODB",
    "DatabaseName": "Basket_Service",
    "Database": "mongodb://mongodb:123456789Aa@mongodb:27017"
  },
  "RedisCache": { //redis-cli -a 123456789Aa | ping
    "EndPoint": "redis:6379",
    "Password": "123456789Aa",
    "InstanceName": "basket:"
  },
  "Authentication": {
    "Authority": "http://keycloak:8080/realms/prog-coder-realm",
    "ClientId": "prog-coder-client-id",
    "ClientSecret": "HvK7fa4wOn9e5wKpxJA2tyd5SK5oGy8c",
    "Audience": "account",
    "Scopes": [ "openid" ],
    "ApiName": "agent.api"
  },
  "AppConfig": {
    "ServiceName": "basket.service",
    "ApiKey": "progcoder.com",
    "IncludeInnerException": true,
    "IncludeExceptionStackTrace": true
  },
  "SwaggerGen": {
    "Enable": true,
    "ContactEmail": "admin@progcoder.com",
    "ContactName": "Huy Xuan Nguyen",
    "ContactUrl": "https://www.progcoder.com",
    "OAuth2RedirectUrl": "http://localhost:5001/swagger/oauth2-redirect.html"
  },
  "ApiClients": {
    "Keycloak": {
      "BaseUrl": "http://keycloak:8080",
      "Realm": "prog-coder-realm",
      "ClientId": "prog-coder-service-account",
      "ClientSecret": "HvK7fa4wOn9e5wKpxJA2tyd5SK5oGy8c",
      "Scopes": [ "openid" ],
      "GrantType": "client_credentials"
    }
  },
  "DistributedTracing": {
    "Enable": true,
    "ServiceName": "basket.service",
    "Source": "basket.service.diagnostics",
    "SamplingRate": 0.25,
    "Prometheus": {
      "Enable": true
    },
    "Otlp": {
      "Endpoint": "http://otel-collector:4317",
      "TimeoutMs": 10000
    }
  },
  "GrpcClients": {
    "Catalog": {
      "Url": "http://catalog-grpc:8080",
