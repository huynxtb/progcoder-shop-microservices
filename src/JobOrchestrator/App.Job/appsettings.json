{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Quartz": "Information"
    },
    "Serilog": {
      "Enable": true,
      "ServiceName": "app.job",
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Information"
        }
      },
      "Console": {
        "Enable": true,
        "Level": "Debug"
      },
      "Otlp": {
        "Endpoint": "http://otel-collector:4317"
      }
    }
  },
  "Quartz": {
    "Scheduler": {
      "InstanceName": "App.Job.Scheduler"
    },
    "ThreadPool": {
      "Type": "Quartz.Simpl.SimpleThreadPool, Quartz",
      "ThreadCount": 10,
      "ThreadPriority": "Normal"
    },
    "JobStore": {
      "Type": "Quartz.Simpl.RAMJobStore, Quartz"
    }
  },
  "AppConfig": {
    "ServiceName": "app.job",
    "ApiKey": "progcoder.com",
    "IncludeInnerException": true,
    "IncludeExceptionStackTrace": true
  },
  "ApiClients": {
    "Keycloak": {
      "BaseUrl": "http://keycloak:8080",
      "Realm": "prog-coder-realm",
      "ClientId": "prog-coder-service-account",
      "ClientSecret": "HvK7fa4wOn9e5wKpxJA2tyd5SK5oGy8c",
      "Scopes": [ "openid" ],
      "GrantType": "client_credentials"
    }
  },
  "GrpcClients": {
    "Catalog": {
      "Url": "http://catalog-grpc:8080",
      "ApiKey": "progcoder.com"
    },
    "Inventory": {
      "Url": "http://inventory-grpc:8080",
      "ApiKey": "progcoder.com"
    },
    "Order": {
      "Url": "http://order-grpc:8080",
      "ApiKey": "progcoder.com"
    },
    "Report": {
      "Url": "http://report-grpc:8080",
      "ApiKey": "progcoder.com"
    }
  }
}
